<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="700.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.watch.Timer">
   <children>
      <ImageView fitHeight="188.0" fitWidth="334.0" layoutX="298.0" layoutY="143.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@background-image.png" />
         </image></ImageView>
      <ImageView fitHeight="40.0" fitWidth="50.0" layoutX="40.0" layoutY="30.0" onMouseClicked="#backBtn" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@backBtn.jpg" />
         </image></ImageView>
      <HBox alignment="CENTER" layoutX="327.0" layoutY="343.0" prefHeight="40.0" prefWidth="245.0" spacing="10.0">
         <children>
            <TextField fx:id="hourTF" alignment="CENTER" prefHeight="25.0" prefWidth="75.0" promptText="Hour" />
            <TextField fx:id="minuteTF" alignment="CENTER" prefHeight="25.0" prefWidth="75.0" promptText="Minute" />
            <TextField fx:id="secondTF" alignment="CENTER" prefHeight="25.0" prefWidth="75.0" promptText="second" />
         </children>
      </HBox>
      <Label fx:id="timer" alignment="CENTER" layoutX="338.0" layoutY="184.0" prefHeight="53.0" prefWidth="223.0">
         <font>
            <Font size="36.0" />
         </font></Label>
      <HBox alignment="CENTER" layoutX="328.0" layoutY="452.0" prefHeight="53.0" prefWidth="245.0" spacing="30.0" style="-fx-background-radius: 20; -fx-background-color: Afb83B;">
         <children>
            <Button mnemonicParsing="false" onAction="#timerStart" prefHeight="39.0" prefWidth="100.0" style="-fx-background-radius: 10;" text="start" textFill="#220ce1">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#resetTimer" prefHeight="39.0" prefWidth="100.0" style="-fx-background-radius: 10;" text="reset" textFill="#cd0606">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </children>
</AnchorPane>
